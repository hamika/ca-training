<html>
  <head>
    <meta charset="utf-8">
  </head>
  <header>
    <div>
      <a href="/thread_new">新規作成</a>
    </div>
  </header>
  <body>
    <h1>けいじばん</h1>
    <table>
      <caption>連絡先一覧</caption>
      <thead>
        <tr>
          <th>お名前</th>
          <th>タイトル</th>
          <th>なにしてる?</th>
        </tr>
      </thead>
      <tbody>
        <% @bbs_threads.each do |bbs_thread| %>
          <tr>
            <td>
              <a href="/threads/<%= bbs_thread.id %>"><%= bbs_thread.name %></a>
            </td>
            <td><%= bbs_thread.title %></td>
            <td><%= bbs_thread.body %></td>
            <td>
              <a href="/edit/<%= bbs_thread.id %>">編集</a>
            </td>
            <td>
              <a href="/delete/<%= bbs_thread.id %>">削除</a>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </body>
</html>
