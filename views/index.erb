<html>
  <head>
    <meta charset="utf-8">
  </head>
  <body>
    <h1><%= erb :_title %></h1>
    <div>
      <a href="/new">新規作成</a>
    </div>
    <table>
      <caption>いちらん</caption>
      <thead>
        <tr>
          <th>件名</th>
          <th>用件</th>
          <th>なにしてる?</th>
        </tr>
      </thead>
      <tbody>
        <% @bbs_thread.each do |b| %>
          <tr>
            <td>
              <a href="/thread/<%= b.id %>"><%= b.name %></a>
            </td>
            <td><%= b.title %></td>
            <td><%= b.body %></td>
            <td>
              <a href="/edit/<%= b.id %>">編集</a>
            </td>
            <td>
              <a href="/delete/<%= b.id %>">削除</a>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </body>
</html>
