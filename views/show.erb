<html>
  <head>
    <meta charset="utf-8">
  </head>
  <body>
      <h1><%= @bbs_thread.name %>さんのページ</h1>
      <div>
        <ul>
          <li><%= @bbs_thread.title %></li>
          <li><%= @bbs_thread.body %></li>
        </ul>
      </div>
    <table>
      <caption>コメント一覧</caption>
      <thead>
        <tr>
          <th>だれ?</th>
          <th>件名</th>
          <th>内容</th>
        </tr>
      </thead>
      <tbody>
        <% @comments.each do |comment| %>
          <tr>
            <td><%= comment.name %></td>
            <td><%= comment.title %></td>
            <td><%= comment.body %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </body>
  <footer>
    <div>
      <a href="/">ホーム</a>
    </div>
  </footer>
</html>
